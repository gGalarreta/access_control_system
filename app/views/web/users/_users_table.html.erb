<div class="material-datatables">
  <table id="employee-datatable" class="table table-hover sical-data-table" data-placeholder="Buscar Empleados">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Correo</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/profiles" class="fa fa-eye"></a>
            <a href="/profiles" class="fa fa-pencil"></a>
            <a href="/profiles" class="fa fa-times"></a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
